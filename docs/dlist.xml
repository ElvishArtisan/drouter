  <refnamediv>
    <refname>dlist</refname>
    <refpurpose>Tool for listing Livewire node resources</refpurpose>
  </refnamediv>
  <info>
    <author>
      <personname>
	<firstname>Fred</firstname>
	<surname>Gleason</surname>
